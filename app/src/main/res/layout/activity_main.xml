<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainActivityBackground">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/header"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:textSize="20sp"

        />

    <TableLayout
        android:id="@+id/gameBoard"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:background="@color/tableBackground"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        />

    <Button
        android:id="@+id/btn_new_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameBoard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="start new game"
        android:textColor="@color/white"
        android:background="#388E3C"
        android:width="150dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_new_game"
        android:orientation="horizontal"
        android:id="@+id/scoreboard"
        android:background="@color/white"
        android:alpha="0.5"
        android:padding="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <TextView
            android:id="@+id/best_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best Result :"
            android:layout_below="@+id/bNewGame"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:textColor="#388E3C"
            />

        <TextView
            android:id="@+id/footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Results Saved"
            android:layout_toRightOf="@+id/best_result"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            />
    </LinearLayout>


    <Button
        android:id="@+id/btn_clear_best_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scoreboard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="clear best result"
        android:textColor="@color/white"
        android:background="#D32F2F"
        android:width="150dp"/>


</RelativeLayout>
